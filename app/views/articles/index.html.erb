<h1>List of articles</h1>

<ul>
  <% @articles.each do |article| %>
  <li>
      <p><%= link_to article.title, article_path(article.id) %></p>
      <p><%= article.content %></p>
      <p>
        <%= link_to 'More details', article_path(article) %>
        <%= link_to 'Modify the article', edit_article_path(article) %>
        <%= link_to 'Delete', article_path(article),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </p>
  </li>
  <% end %>
</ul>

<%= link_to 'Create a new article', new_article_path %>
